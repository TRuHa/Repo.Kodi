<?xml version='1.0' encoding='UTF-8'?>
<addons>
  <addon id="repository.TRuHaKodi" name="TRuHa Add-ons" provider-name="TRuHa Add-ons" version="0.0.1">
    <extension name="TRuHa Add-ons Repository" point="xbmc.addon.repository">
      <info compressed="false">http://aussieaddons.com/repository/addons.xml</info>
      <checksum>http://aussieaddons.com/repository/addons.xml.md5</checksum>
      <datadir zip="true">http://aussieaddons.com/repository/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary>Instala TRuHa Add-ons</summary>
      <description>Descarga y Instala add-ons de TRuHa Add-ons repository.</description>
      <platform>all</platform>
    </extension>
  </addon>
  <addon id="service.AutoFan" name="AutoFan" provider-name="TRuHa Addons" version="0.0.1">
    <requires>
      <import addon="xbmc.python" version="2.1.0" />
    </requires>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary>AutoFan.</summary>
      <description>
          Activa ventilacion regulada segun temperatura de CPU
      </description>
    </extension>
  </addon>
</addons>